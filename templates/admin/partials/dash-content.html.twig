<!-- Dashboard Content
	================================================== -->
<div class="dashboard-content-container" data-simplebar>
    <div class="dashboard-content-inner" >

        <!-- Dashboard Headline -->
        <div class="dashboard-headline">
            <h3>Howdy, {{ app.user.firstname }} !</h3>
            <span>We are glad to see you again!</span>

            <!-- Breadcrumbs -->
            <nav id="breadcrumbs" class="dark">
                <ul>
                    <li><a href="{{ path('home') }}">Home</a></li>
                    <li>Dashboard</li>
                </ul>
            </nav>
        </div>

        <!-- Fun Facts Container -->
        <div class="fun-facts-container">
            <div class="fun-fact" data-fun-fact-color="#36bd78">
                <div class="fun-fact-text">
                    <span>Projects</span>
                    <h4>{{ project|length }}</h4>
                </div>
                <div class="fun-fact-icon"><i class="icon-material-outline-gavel"></i></div>
            </div>
            <div class="fun-fact" data-fun-fact-color="#b81b7f">
                <div class="fun-fact-text">
                    <span>SDGs</span>
                    <h4>{{ category|length }}</h4>
                </div>
                <div class="fun-fact-icon"><i class="icon-material-outline-business-center"></i></div>
            </div>
            <div class="fun-fact" data-fun-fact-color="#efa80f">
                <div class="fun-fact-text">
                    <span>Events</span>
                    <h4>{{ calendar|length }}</h4>
                </div>
                <div class="fun-fact-icon"><i class="icon-material-outline-rate-review"></i></div>
            </div>
            {% if is_granted('ROLE_ADMIN') %}
            <!-- Last one has to be hidden below 1600px, sorry :( -->
            <div class="fun-fact" data-fun-fact-color="#2a41e6">
                <div class="fun-fact-text">
                    <span>Homers</span>
                    <h4>{{ user|length }}</h4>
                </div>
                <div class="fun-fact-icon"><i class="icon-feather-trending-up"></i></div>
            </div>
            {% endif %}
        </div>

        <!-- Row -->
        <div class="row">

            <div class="col-xl-8">
                <!-- Dashboard Box -->
                {% if project|length > 0 %}
                <div class="dashboard-box main-box-in-row">
                    <div class="headline">
                        <h3><i class="icon-feather-bar-chart-2"></i> Latest projects</h3>
                    </div>
                    <div class="content with-padding">
                    {% for list in project %}
                        <div class="dashboard-note">
                            {% if is_granted('ROLE_ADMIN') %}
                                <div class="float-right">
                                    <a href="{{ path('projects_edit', {id: list.id}) }}" title="Edit" data-tippy-placement="top"><i class="icon-feather-edit"></i></a>
                                </div>
                            {% endif %}
                            <p>{{ list.name }}</p>
                        </div>
                    {% endfor %}
                    </div>
                </div>
                <!-- Dashboard Box / End -->
                {% endif %}
            </div>
            <div class="col-xl-4">

                <!-- Dashboard Box -->
                <!-- If you want adjust height of two boxes
                     add to the lower box 'main-box-in-row'
                     and 'child-box-in-row' to the higher box -->
                    <div class="dashboard-box">
                        <div class="headline">
                            <h3><i class="icon-material-outline-assignment"></i> SDGs list</h3>
                        </div>
                        {% if category|length > 0 %}
                        <div class="content">
                            <ul class="dashboard-box-list">
                                {% for cat in category %}
                                <li>
                                    <span class="notification-icon"><img style="width: 100px;" src="{{ asset('uploads/' ~ cat.photo) }}"></span>
                                    <span class="notification-text">
                                        {{ cat.name }}
                                        </span>
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                        {% endif %}
                    </div>
                <!-- Dashboard Box / End -->
            </div>
        </div>
        <!-- Row / End -->

        <!-- Footer -->
        <div class="dashboard-footer-spacer"></div>
        <div class="small-footer margin-top-15">
            <div class="small-footer-copyrights">
                Â© 2020 <strong>Home Platform</strong>. All Rights Reserved.
            </div>
            <ul class="footer-social-links">
                <li>
                    <a href="#" title="Facebook" data-tippy-placement="top">
                        <i class="icon-brand-facebook-f"></i>
                    </a>
                </li>
                <li>
                    <a href="#" title="Twitter" data-tippy-placement="top">
                        <i class="icon-brand-twitter"></i>
                    </a>
                </li>
                <li>
                    <a href="#" title="Google Plus" data-tippy-placement="top">
                        <i class="icon-brand-google-plus-g"></i>
                    </a>
                </li>
                <li>
                    <a href="#" title="LinkedIn" data-tippy-placement="top">
                        <i class="icon-brand-linkedin-in"></i>
                    </a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <!-- Footer / End -->

    </div>
</div>
<!-- Dashboard Content / End -->

