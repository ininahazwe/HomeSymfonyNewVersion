{% extends 'layouts/base.html.twig' %}

{% block title %}Forgotten password - Step 2{% endblock %}

{% block body %}

<main class="container mt-3">
    <h1 class="text-center">Forgotten password - Step 2</h1>
    {{ form_start(forgotPasswordFormStep2) }}
    <div class="row mt-5">
        <div class="col-md-6">
            {{ form_row(forgotPasswordFormStep2.password.first) }}
        </div>
        <div class="col-md-6">
            {{ form_row(forgotPasswordFormStep2.password.second) }}
        </div>
    </div>
    <div class="mt-3">
        <button class="btn btn-primary d-block mx-auto" title="Enter new password 2 times to be reset">Reset your password</button>
        <br>
        <small>This link will expire at {{ passwordMustBeModifiedBefore }}</small>
    </div>
    {{ form_end(forgotPasswordFormStep2) }}
</main>

{% endblock %}