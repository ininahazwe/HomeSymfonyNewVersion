<form method="post" action="{{ path('users_delete', {'id': app.user.id}) }}" onsubmit="return confirm('Are you sure you want to delete the account?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ app.user.id) }}">
    <button class="button gray ripple-effect ico"><i class="icon-feather-trash"></i></button>
</form>
