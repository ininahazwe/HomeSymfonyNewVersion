{% extends 'layouts/admin.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
<div class="dashboard-content-container" data-simplebar>
    <div class="dashboard-content-inner" >

    <div class="card">
        <div class="card-body text-center">
            <div class="profile-pic mb-3 mt-3">
                <div class="always-visible margin-top-25 margin-bottom-5 float-right">
                    <a href="{{ path('users_edit', {'id': user.id, 'lastname': user.fullName}) }}" class="button gray ripple-effect ico" title="edit" data-tippy-placement="top"><i class="icon-feather-edit"></i></a>
                </div>
                <div class="">
                    <img class="rounded-circle" style="width: 45px; height: 45px; border-radius: 45px;" src="{{ asset('uploads/' ~ user.avatar) }}" alt="user" />
                </div>
                <h4 class="mt-3 mb-0">{{ user.fullName }}</h4>
                <a href="mailto:{{ user.email }}">{{ user.email }}</a>
            </div>
        </div>
    </div>
        <!-- Dashboard Box -->
        <div class="row">
            <div class="col-6">
                <div class="boxed-list margin-bottom-60">
                    <div class="boxed-list-headline">
                        <p class="numbered color filled float-right">{{ user.projects|length }}</p>
                        <h3><i class="icon-material-outline-dashboard"></i> My projects</h3>
                    </div>
                    {% if user.projects|length > 0 %}
                        <div class="listings-container compact-list-layout">
                            {% for project in user.projects %}
                                <!-- Job Listing -->
                                <a href="{{ path('projects_show', {id: project.id, slug: project.slug}) }}" class="job-listing">
                                    <!-- Job Listing Details -->
                                    <div class="job-listing-details">
                                        <!-- Details -->
                                        <div class="job-listing-description">
                                            <h3 class="job-listing-title">{{ project.name }}</h3>
                                        </div>
                                    </div>
                                </a>
                            {% endfor %}

                        </div>
                    {% else %}
                        <div class="row text-center">
                            You don't have yet a project
                        </div>
                    {% endif %}
                </div>
                {#{{ include('users/_delete_form.html.twig') }}#}
            </div>
            <div class="col-6">
                <div class="boxed-list margin-bottom-60">
                    <div class="boxed-list-headline">
                        <p class="numbered color filled float-right">{{ calendars|length }}</p>
                        <h3><i class="icon-feather-calendar"></i> My events</h3>
                    </div>
                    {% if user.calendars|length > 0 %}
                        <div class="listings-container compact-list-layout">
                            {% for event in user.calendars %}
                                <!-- Job Listing -->
                                <a href="" class="job-listing">
                                    <!-- Job Listing Details -->
                                    <div class="job-listing-details">
                                        <!-- Details -->
                                        <div class="job-listing-description">
                                            <h3 class="job-listing-title">{{ event.title }}</h3>
                                        </div>
                                    </div>
                                </a>
                            {% endfor %}

                        </div>
                    {% else %}
                        <div class="row text-center">
                            You don't have yet an event
                        </div>
                    {% endif %}
                </div>
                {#{{ include('users/_delete_form.html.twig') }}#}
            </div>
        </div>
    </div>
</div>
{% endblock %}
