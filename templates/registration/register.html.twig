{% extends 'layouts/base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.firstname, {'label': 'Firstname','attr': {'placeholder': 'firstame ...'}}) }}
        {{ form_row(registrationForm.lastname, {'label': 'Lastname','attr': {'placeholder': 'lastname ...'}}) }}
        {{ form_row(registrationForm.email, {'label': 'Email address','attr': {'placeholder': 'nom d\'utilisateur ...'}}) }}
        {{ form_row(registrationForm.plainPassword, {'label': 'Password','attr': {'placeholder': 'nom d\'utilisateur ...'}}) }}
        {{ form_row(registrationForm.confirm_password, {'label': 'Password confirmation','attr': {'placeholder': 'your password again ...'}}) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
