{% set isLogged = (user is not empty) %}
{% extends isLogged ?'layouts/admin.html.twig' : 'layouts/base.html.twig' %}

{% block title %}Projects{% endblock %}

{% block body %}
    <h1>Projects</h1>
    <div class="row">
        <div class="col-md-6 mx-auto">
            <article class="pin bg-white rounded">
                <div class="mw-100 rounded-top overflow-hidden">
                    <img class="card-img-top" src="{{ asset('uploads/' ~ project.photo) }}" alt="{{ project.name }}">
                </div>
                <div class="p-3">
                    <h1 class="h5 text-secondary"><a href="{{ path('property.show', {id: project.id, slug: project.slug}) }}" class="text-decoration-none">{{ project.name }}</a></h1>
                    <p class="text-muted">
                        <small>
                            Project by
                            {% for user in project.users %}
                                {{ user.fullName }}
                            {% endfor %}
                        </small>
                    </p>
                    <p class="text-muted">
                        <small>
                            Categories
                            {% for category in project.category %}
                                <a href="{{ path('categories_show', {id: category.id, slug: category.slug}) }}"><img class="icon-cat card-img-top" src="{{ asset('uploads/' ~ category.photo)|imagine_filter('icon') }}" alt="{{ category.name }}"></a>
                            {% endfor %}
                        </small>
                    </p>
                    <p class="text-break pt-3">
                        {{ project.description }}
                    </p>
                    {% if user is not empty %}
                    <div class="pt-3">
                        <a href="{{ path('projects_edit', {id: project.id}) }}" class="btn btn-light">Edit the project</a>
                        {{ include('projects/_delete_form.html.twig') }}
                    </div>
                    {% endif %}

                </div>
            </article>
        </div>
    </div>

    <a href="{{ path('projects_index') }}" class="btn btn-light">back to list</a>
{% endblock %}
