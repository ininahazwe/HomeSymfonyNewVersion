{% extends 'layouts/base.html.twig' %}

{% block title %}Projects{% endblock %}

{% block body %}
    <h1>Projects</h1>

    <div class="row">
        <div class="col-md-6 mx-auto">
            <article class="pin bg-white rounded shadow">
                <div class="mw-100 rounded-top overflow-hidden">
                    <img class="card-img-top" src="{{ asset('uploads/' ~ project.photo) }}" alt="{{ project.name }}">
                </div>
                <div class="p-3">
                    <h1 class="h5 text-secondary"><a href="{{ path('property.show', {id: project.id, slug: project.slug}) }}" class="text-decoration-none">{{ project.name }}</a></h1>
                    <p class="text-muted">
                        <small>
                            Submitted by
                            {% for user in project.users %}
                                {{ user.fullName }}
                            {% endfor %}
                        </small>
                    </p>
                    <p class="text-muted">
                        <small>
                            Categories
                            {% for category in project.category %}
                                {{ category.name }}
                            {% endfor %}
                        </small>
                    </p>
                    <p class="text-break pt-3">
                        {{ project.description }}
                    </p>
                    {% if is_granted('ROLE_USER') %}
                    <div class="pt-3">
                        <a href="{{ path('projects_edit', {id: project.id}) }}" class="btn btn-light">Edit the project</a>
                        <a href="#" onclick="event.preventDefault(); confirm('êtes-vous sûr(e)?') && document.getElementById('js-pin-delete-form').submit();" class="btn btn-light">Remove the project</a>

                        <form id="js-pin-delete-form" action="{{ path('projects_delete', {id: project.id}) }}" method="post" style="display: none;">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token('projects_deletion_' ~ project.id) }}">
                            <input type="hidden" name="_method" value="DELETE">
                        </form>
                    </div>
                    {% endif %}
                </div>
            </article>
        </div>
    </div>

    <a href="{{ path('projects_index') }}" class="btn btn-light">back to list</a>
{% endblock %}
