{% extends 'layouts/admin.html.twig' %}

{% block title %}Projects{% endblock %}

{% block body %}
<div class="dashboard-content-container" data-simplebar>
    <div class="dashboard-content-inner">
        <h3 class="page-title">Your projects</h3>

            <div class="col-xl-12 col-lg-12 content-left-offset">
                <div class="boxed-list margin-bottom-60">
                    <div class="boxed-list-headline">
                        <p class="numbered color filled float-right">{{ app.user.projects|length }}</p>
                        <h3><i class="icon-material-outline-dashboard"></i> My projects</h3>
                    </div>
                    {% if app.user.projects|length > 0 %}
                        <div class="listings-container compact-list-layout">
                            {% for project in app.user.projects %}
                                <!-- Job Listing -->
                                <a href="{{ path('projects_show', {id: project.id, slug: project.slug}) }}" class="job-listing">
                                    <!-- Job Listing Details -->
                                    <div class="job-listing-details">
                                        <!-- Details -->
                                        <div class="job-listing-description">
                                            <h3 class="job-listing-title">{{ project.name }}</h3>
                                        </div>
                                    </div>
                                </a>
                            {% endfor %}

                        </div>
                    {% else %}
                        <div class="row text-center">
                            <p class="h4 mt-5 text-center">No projects yet. <a href="{{ path('projects_new') }}">Create your first project</a></p>
                        </div>
                    {% endif %}
                </div>
                {#{{ include('users/_delete_form.html.twig') }}#}
            </div>
    </div>
</div>
{% endblock %}
