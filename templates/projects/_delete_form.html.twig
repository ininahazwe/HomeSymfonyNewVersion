<form method="post" action="{{ path('projects_delete', {'id': project.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
    <button class="button gray ripple-effect ico float-right"><i class="icon-feather-trash-2"></i></button>
</form>
