{% set isLogged = (user is not empty) %}
{% extends isLogged ?'layouts/admin.html.twig' : 'layouts/base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-10 mx-auto">
        <table class="table">
            <tbody>
                <tr>
                    <th>Name</th>
                    <td>{{ category.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ category.description }}</td>
                </tr>
                <tr>
                    <th>Icon</th>
                    <td>
                        <img class="icon-cat card-img-top" style="width: 100px;" src="{{ asset('uploads/' ~ category.photo)|imagine_filter('echelle') }}" alt="{{ category.name }}">
                    </td>
                </tr>
            </tbody>
        </table>

        {% if user is not empty %}
            <a class="btn btn-light" href="{{ path('categories_index') }}">back to list</a>
            <a href="{{ path('categories_edit', {id: category.id}) }}" class="btn btn-light">Edit the project</a>

        {{ include('categories/_delete_form.html.twig') }}
        {% endif %}

    </div>
</div>

{% endblock %}
