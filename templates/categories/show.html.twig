{% set isLogged = (user is not empty) %}
{% extends isLogged ?'layouts/admin.html.twig' : 'layouts/base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <div class="dashboard-content-container" data-simplebar>
        <div class="dashboard-content-inner" >
            <div class="row">
                <div class="col-xl-12">
                    <div class="dashboard-box margin-top-0">

                        <!-- Headline -->
                        <div class="headline">
                            <!-- Buttons -->
                            {% if is_granted('ROLE_ADMIN') %}
                                <div class="always-visible float-right">
                                    <a href="{{ path('categories_edit', {id: category.id, slug: category.slug}) }}" class="button gray ripple-effect ico" title="edit" data-tippy-placement="bottom"><i class="icon-feather-edit"></i></a>
                                </div>
                            {% endif %}
                            <h3><i class="icon-line-awesome-list-ul"></i> {{ category.name|capitalize }}</h3>
                        </div>

                        <div class="content">
                            <ul class="dashboard-box-list">

                                <li>
                                    <!-- Overview -->
                                    <div class="freelancer-overview manage-candidates">
                                        <div class="freelancer-overview-inner">

                                            <!-- Avatar -->
                                            <div class="">
                                                <a href="{{ path('categories_show', {id: category.id, slug: category.slug}) }}"><img style="width: 80px;" src="{{ asset('uploads/' ~ category.photo) }}"></a>
                                            </div>

                                            <!-- Name -->
                                            <div class="freelancer-name">
                                                <h4 class="margin-bottom-25"><a href="{{ path('categories_show', {id: category.id, slug: category.slug}) }}">{{ category.name|capitalize }}</a></h4>
                                                <!-- Details -->
                                                <p>{{ category.description }}</p>
                                                <!-- Buttons -->
                                                <div class="buttons-to-right always-visible margin-top-25 margin-bottom-5">
                                                    {% if user %}
                                                    <a href="{{ path('categories_index') }}" class="button dark ripple-effect"><i class="icon-material-outline-arrow-back"></i> Back to list</a>
                                                    {% else %}
                                                    <a href="{{ path('home') }}" class="button dark ripple-effect"><i class="icon-material-outline-arrow-back"></i> Back to homepage</a>
                                                    {% endif %}
                                                    {% if is_granted('ROLE_ADMIN') %}
                                                        {{ include('categories/_delete_form.html.twig') }}
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </li>

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
