{{ form_start(form) }}
    {{ form_widget(form) }}
    {% if app.request.attributes.get('_route') == 'categories_edit' %}
        <h4>Images</h4>
        {% for image in category.photo %}
            <div>
                <img src="{{ asset('/uploads/' ~ image.name) }}" alt="Image" width="150">
                <a href="{{ path('categories_delete_image', {id: image.id}) }}" data-delete data-token="{{ csrf_token('delete' ~ image.id) }}">Supprimer</a>
            </div>
        {% endfor %}
    {% endif %}
    <button class="btn waves-effect waves-light btn-success">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
