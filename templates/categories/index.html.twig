{% extends 'layouts/admin.html.twig' %}

{% block title %}Categories index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center m-3">
        <a href="{{ path('categories_new') }}"><button type="button" class="btn btn-primary text-center"><i class="fas fa-check"></i>
                Create new</button></a>
    </div>
<div class="row">
    <div class="col-md-10 mx-auto">

        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Icon</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.name|capitalize }}</td>
                    <td>{{ category.description|length > 50 ? category.description|slice(0, 50) ~ '...' }}</td>
                    <td>
                        <a href="{{ path('categories_show', {id: category.id, slug: category.slug}) }}"><img class="card-img-top" style="width: 50px;" src="{{ asset('uploads/' ~ category.photo)|imagine_filter('icon') }}" alt="{{ category.name }}"></a>
                    </td>
                    <td>
                        <a class="btn btn-light" href="{{ path('categories_show', {id: category.id, slug: category.slug}) }}">show</a>
                        <a class="btn btn-light" href="{{ path('categories_edit', {id: category.id, slug: category.slug}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
</div>
{% endblock %}
